---
import { SITE } from '~/utils/config';
import Image from '~/components/common/Image.astro';
---

<span class="flex items-center ml-2 rtl:ml-0 rtl:mr-2 text-2xl md:text-xl font-bold text-gray-900 whitespace-nowrap dark:text-white">
  <Image
    class="inline-block"
    sizes="24px"
    loading="eager"
    width={24}
    height={17}
    src='~/assets/images/logo_peach60x42.svg'
    alt='MessageFlow logo'
  /> 
  <span class="ml-2">{SITE?.name}</span>
</span>
